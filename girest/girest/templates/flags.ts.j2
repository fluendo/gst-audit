{# flags template - handles flag/bitfield types (same as enum but semantic distinction) #}
{% set values_union = flags.values | map(attribute='value') | map('tojson') | join(' | ') %}
{% if flags.methods|length > 0 %}
export namespace {{ flags.name }} {
  {% for value in flags.values %}
  export const {{ value.const_name }}: '{{ value.value }}' = '{{ value.value }}';
  {% endfor %}
  {% for method in flags.methods %}
    {{ method.generate() }}
  {% endfor %}
  }
  export type {{ flags.name }}Value = {{ values_union }};
{% else %}
export type {{ flags.name }} = {{ values_union }};
{% endif %}
